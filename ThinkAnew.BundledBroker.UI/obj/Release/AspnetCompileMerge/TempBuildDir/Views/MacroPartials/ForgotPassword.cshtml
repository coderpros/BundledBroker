@using (Html.BeginUmbracoForm(@"ForgotPassword", @"Account", FormMethod.Post,
    new { enctype = @"multipart/form-data", role = @"form" }))
{
    @Html.AntiForgeryToken()
    <div class="row form-group">
        @Html.Label(@"Email", new { @class = @"col-sm-1 control-label"})
        <div class="col-sm-4">
            @(Html.Kendo().TextBox()
                .Name(@"Email")
                .HtmlAttributes(new {@class = @"form-control text required", type="email"})
            )
            @Html.ValidationMessage("Email")
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-12">
            @(Html.Kendo().Button()
                  .Name(@"ForgotPasswordButton")
                  .Content(@"Send")
                  .HtmlAttributes(new { @class=@"k-primary"})
                  .Icon(@"email"))
            &nbsp;&nbsp;
            @(Html.Kendo().Button()
                  .Name(@"ResetGeneralButton")
                  .Content(@"Reset")
                  .HtmlAttributes(new { type = @"reset"})
                  .Icon(@"reset"))
        </div>
    </div>
}