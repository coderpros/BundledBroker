@model ThinkAnew.BundledBroker.UI.Models.ResetPasswordViewModel

@using (Html.BeginUmbracoForm(@"ResetPassword", @"Account", FormMethod.Post,
                new { enctype = @"multipart/form-data", role = @"form" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("Id", Request.QueryString["id"])

    <div class="row form-group">
        @Html.LabelFor(m => m.Password1, new { @class = @"col-xs-2 control-label" })
        <div class="col-xs-3">
            @(Html.Kendo().TextBoxFor(m => m.Password1)
                  .Name(@"Password1")
                  .HtmlAttributes(new { @class = @"form-control text", type = @"password" })
            )
            @Html.ValidationMessageFor(m => m.Password1)
        </div>
        @Html.LabelFor(m => m.Password2, new { @class = @"col-xs-2 control-label" })
        <div class="col-xs-3">
            @(Html.Kendo().TextBoxFor(m => m.Password2)
                  .Name(@"Password2")
                  .HtmlAttributes(new {@class = @"form-control text", type = @"password"})
                  )
            @Html.ValidationMessageFor(m => m.Password2)
        </div>
    </div>
    <div class="row form-group">
        <div class="col-xs-8">
            @(Html.Kendo().Button()
                  .Name(@"SavePasswordButton")
                  .Content(@"Save")
                  .HtmlAttributes(new { @class = @"k-primary" })
                  .Icon(@"save")
            )
            &nbsp;&nbsp;
            @(Html.Kendo().Button()
                  .Name(@"ResetPasswordButton")
                  .Content(@"Reset")
                  .HtmlAttributes(new { type = @"reset" })
                  .Icon(@"reset")
            )
        </div>
    </div>
}